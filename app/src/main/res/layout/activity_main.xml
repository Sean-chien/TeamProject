<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bgy"
        android:layout_alignParentEnd="true"/>

    <ImageView

        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo_s"
        android:layout_marginStart="23dp"
        android:layout_marginTop="20dp"/>

        <!--android:id="@+id/App_title"-->
        <!--android:layout_width="126dp"-->
        <!--android:layout_height="96dp"-->
        <!--android:layout_marginTop="44dp"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintHorizontal_bias="0.189"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent"-->
        <!--app:srcCompat="@drawable/logo_s" />-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="85dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    <Button
        android:id="@+id/taiwanImg"
        android:onClick="taiwanFood"
        android:layout_width="365dp"
        android:layout_height="490dp"
        android:background="@drawable/taiwan_img"
        android:text="Taiwan Food"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/koreanImg"
        android:onClick="koreanFood"
        android:layout_width="365dp"
        android:layout_height="490dp"
        android:background="@drawable/korean_img"
        android:text="Korean Food"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"/>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>